module PingPong where

template Ping
  with
    sender: Party
    receiver: Party
    count: Int
  where
    signatory sender
    observer receiver

    choice RespondPong : ()
      controller receiver
      do
        if count > 3 then return ()
        else do
          create Pong with sender = receiver; receiver = sender; count = count + 1
          return ()

